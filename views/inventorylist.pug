extends layout

block navigation
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    a.navbar-brand(href="/") Lab
    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
      span.navbar-toggler-icon
    div.collapse.navbar-collapse(id="navbarNav")
      ul.navbar-nav
        li.nav-item.active
          a.nav-link(href='/chips') Chip Master File 
        li.nav-item
          a.nav-link(href='/inventory' active) Chip Inventory 
            span(class="sr-only") *
        li.nav-item
          a.nav-link(href='/projects') My Projects 

block content
  h3 Current Inventory
  table.table.table-striped
    tr
      th Number
      th Family
      th Manufacturer
      th Quantity
      th Description

    each n in inventory
      tr
        td
          a(href="/inventory/"+n.id) #{n.full_number}
        td 
          a(href="/chips/"+n.chip_id target='_blank') #{n.chip_number}
        td= n.name
        td= n.quantity
        td= n.description