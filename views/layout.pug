doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="icon", type="image/x-icon", href="/images/favicon.ico")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH', crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    title !{title}
  body

    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      div.container-fluid
        a.navbar-brand(href="/") My Lab
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div#navbarNav.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a#cmf.nav-link(href='/components') Component Master File 
            li.nav-item
              a#inv.nav-link(href='/inventory') Inventory 
            li.nav-item
              a#location.nav-link(href="/locations") Locations
            li.nav-item
              a#proj.nav-link(href='/projects') My Projects 
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Utilities
              ul.dropdown-menu
                li
                  a#mfg.dropdown-item(href="/manufacturers") Manufacturers
                li
                  a#list.dropdown-item(href="/lists") List Management
                li
                  hr.dropdown-divider
                li
                  a#import.dropdown-item(href="/imports") Import Chip Definitions
                li
                  a#export.dropdown-item(href="/exports") Export Chip Definitions
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Settings
              ul.dropdown-menu
                li
                  a#mount.dropdown-item(href="/mounting_types") Mounting Types
                li
                  a#comp.dropdown-item(href="/component_types") Component Types
                li
                  a#package.dropdown-item(href="/package_types") Package Types
                li
                  a#loctype.dropdown-item(href="/location_types") Location Types

    div.container
      h1.mb-4 !{title}

      block content

    script(src="https://code.jquery.com/jquery-1.12.4.min.js", integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
    
    block scripts
