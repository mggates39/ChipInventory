extends ../layout

block content
  h3 #{inventory.mfg_code} (#{inventory.name})
  p Enter the new date code
  form(action="/inventory/"+inventory.id+"/newdate" method="POST")
    div.form-group
      label(for="date_code") Date Code:
      input#date_code.form-control(type="text" placeholder="Ex) 9315" name="date_code")
    div.form-group
      label(for="quantity") Quantity:
      input#quantity.form-control(type="text" placeholder="Enter quantity to be added" name="quantity")
    br
    button.btn.btn-default.btn-primary(type="submit") Submit

block scripts
  script(type="text/javascript").
    $( document ).ready(function() {
      $("#inv").addClass("active");
      $("#date_code").focus();
    });
