extends ../layout

block content
  p Enter the new chip inventory
  form(action="/inventory/new/" method="POST")
    div.form-group
      label(for="chip_id") Base Chip Number:
      select#chip_id.form-control(type='select' placeholder='Select chip' name='chip_id' required='true')
        for chip in chips
          option(value=chip.id) #{chip.chip_number}
    div.form-group
      label(for="mfg_code_id") Manufacturer:
      select#mfg_code_id.form-control(type='select' placeholder='Select Manufacturer' name='mfg_code_id' )
        for mfg in manufacturers
          option(value=mfg.id) #{mfg.display_name}
    div.form-group
      label(for="full_number") Chip Number:
      input#full_number.form-control(type="text" placeholder="Enter actual number on the chip" name="full_number")
    div.form-group
      label(for="date_code") Date Code:
      input#date_code.form-control(type="text" placeholder="Ex) 9315" name="date_code")
    div.form-group
      label(for="quantity") Quantity:
      input#quantity.form-control(type="text" placeholder="Enter quantity to be added" name="quantity")
    br
    button.btn.btn-default.btn-primary(type="submit") Submit

block scripts
  script(type="text/javascript").
    $( document ).ready(function() {
      $("#inv").addClass("active");
    });
