extends ../layout

block content
  p Enter the new component inventory
  form(action="/inventory/new/" method="POST")
    div.row.mb-3
      label.col-sm-2.col-form-label(for="chip_id") Base Component:
      select#chip_id.col-sm-2(type='select' placeholder='Select component' name='chip_id' required='true')
        for component in components
          option(value=component.id) #{component.chip_number}
    div.row.mb-3
      label.col-sm-2.col-form-label(for="mfg_code_id") Manufacturer:
      select#mfg_code_id.col-sm-4(type='select' placeholder='Select Manufacturer' name='mfg_code_id' )
        for mfg in manufacturers
          option(value=mfg.id) #{mfg.display_name}
    div.row.mb-3
      label.col-sm-2.col-form-label(for="full_number") Chip Number:
      input#full_number.col-sm-2(type="text" placeholder="Enter actual number on the chip" name="full_number")
    div.row.mb-3
      label.col-sm-2.col-form-label( for="location_id") Location:
      select#location_id.col-sm-3(type='select' placeholder='Select Component type' name='location_id')
        option(value='') 
        for location in locations
          option(value=location.id) #{location.name}
    div.row.mb-3
      label.col-sm-2.col-form-label(for="date_code") Date Code:
      input#date_code.col-sm-2(type="text" placeholder="Ex) 9315" name="date_code")
    div.row.mb-3
      label.col-sm-2.col-form-label(for="quantity") Quantity:
      input#quantity.col-sm-2(type="text" placeholder="Enter quantity to be added" name="quantity")
    br
    button.btn.btn-default.btn-primary(type="submit") Submit

block scripts
  script(type="text/javascript").
    $( document ).ready(function() {
      $("#inv").addClass("active");
      $("#chip_id").focus();
    });
