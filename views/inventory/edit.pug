extends ../layout

block content
  p Edit the component inventory
  form(action="/inventory/"+data.id method="POST")
    div.row.mb-3
      label.col-sm-2.col-form-label(for="component_id") Base Chip Number:
      select#component_id.col-sm-2(type='select' placeholder='Select chip' name='component_id' required='true')
        for component in components
          option(value=component.id selected= data.component_id == component.id) #{component.name}
    div.row.mb-3
      label.col-sm-2.col-form-label(for="mfg_code_id") Manufacturer:
      select#mfg_code_id.col-sm-4(type='select' placeholder='Select Manufacturer' name='mfg_code_id' )
        for mfg in manufacturers
          option(value=mfg.id selected= data.mfg_code_id == mfg.id) #{mfg.display_name}
    div.row.mb-3
      label.col-sm-2.col-form-label(for="full_number") Chip Number:
      input#full_number.col-sm-2(type="text" placeholder="Enter actual number on the chip" name="full_number" value=data.full_number)
    div.row.mb-3
      label.col-sm-2.col-form-label( for="location_id") Location:
      select#location_id.col-sm-3(type='select' placeholder='Select Component type' name='location_id')
        option(value='') 
        for location in locations
          option(value=location.id selected= data.location_id == location.id) #{location.name}
    div.row.mb-3
      label.col-sm-2.col-form-label(for="quantity_on_hand") Quantity On Hand:
      input#quantity_on_hand.col-sm-2(type="text" placeholder="Enter quantity to be added" name="quantity_on_hand" value=data.quantity_on_hand)
    div.row.mb-3
      label.col-sm-2.col-form-label(for="quantity_allocated") Quantity Allocated:
      input#quantity_allocated.col-sm-2(type="text" placeholder="Enter quantity to be added" name="quantity_allocated" value=data.quantity_allocated)
    div.row.mb-3
      label.col-sm-2.col-form-label(for="quantity_available") Quantity Available:
      input#quantity_available.col-sm-2(type="text" placeholder="Enter quantity to be added" name="quantity_available" value=data.quantity_available)
    div.row.mb-3
      label.col-sm-2.col-form-label(for="quantity_on_order") Quantity On Order:
      input#quantity_on_order.col-sm-2(type="text" placeholder="Enter quantity to be added" name="quantity_on_order" value=data.quantity_on_order)
    br
    button.btn.btn-default.btn-primary(type="submit") Submit

block scripts
  script(type="text/javascript").
    $( document ).ready(function() {
      $("#inv").addClass("active");
      $("#component_id").focus();
    });
