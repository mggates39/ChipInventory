extends ../layout

block content
  h3= inventory.description
  p= inventory.full_number + ' - '
   a(href="/chips/"+inventory.component_id) #{inventory.chip_number}
  p #[strong Manufacture:] #{inventory.mfg_code + ' (' + inventory.name + ')'}
  p #[strong Location:] #{inventory.location}
  p #[strong Quantity] 
  p #[strong On Hane:] #{inventory.quantity_on_hand}
  p #[strong Allocated:] #{inventory.quantity_allocated}
  p #[strong Available:] #{inventory.quantity_available}
  p #[strong On Order:] #{inventory.quantity_on_prder}

  a.btn.btn-primary(href="/inventory/edit/" + inventory.id, role="button") Edit
  table
    tr
      th Date Code
      th Quantity

    each n in inventory_dates
      tr
        td= n.date_code
        td= n.quantity

    tr
      td Total
      td= inventory.quantity_on_hand

  a.btn.btn-secondary(href="/inventory/" + inventory.id + "/newdate", role="button") Add Date Code

block scripts
  script(type="text/javascript").
    $( document ).ready(function() {
      $("#inv").addClass("active");
    });
