extends ../layout

block content
  p Create new project definition
  form(action="/projects/new/" method="POST")
    div.row.mb-3
      label.col-sm-2.col-form-label(for="name") List Name:
      input#name.col-sm-2( type="text" placeholder="Ex) New PCB" name="name" value=project.name)
    div.row.mb-3
      label.col-sm-2.col-form-label(for="description") Description:
      input#description.col-sm-4( type="text" placeholder="Ex) Fun time circuit" name="description" value=project.description)
    div.row.mb-3
      label.col-sm-2.col-form-label(for="quantity_to_build") Quantity to Build:
      input#description.col-sm-4( type="text" placeholder="Ex) 1" name="quantity_to_build" value=project.quantity_to_build)
    div.row.mb-3
      label.col-sm-2.col-form-label(for="") Status:
      select#status_id.col-sm-2(type='select' placeholder='Select Component type' name='status_id' required='true')
        for status in status_list
          option(value=status.id selected= project.status_id == status.id) #{status.name}

    button.btn.btn-default.btn-primary(type="submit") Submit

block scripts
  script(type="text/javascript").
    $( document ).ready(function() {
      $("#proj").addClass("active");
      $("#name").focus();
    });
