extends ../layout

block content
  p Enter the new fuse defintion
  form(action="/fuses/new/" method="POST")
    div.form-group
      label(for="fuse_number") Fuse Number:
      input#fuse_number.form-control( type="text" placeholder="Ex) 7425" name="fuse_number" value=data.fuse_number)
    div.form-group
      label( for="aliases") Aliases:
      input#aliases.form-control(type="text" placeholder="Ex) 74HTC25, 74LS25" name="aliases" value=data.aliases)
    div.form-group
      label( for="description") Description:
      input#description.form-control(type="text" placeholder="Summary of what the fuse is used for" name="description" value=data.description)
    div.form-group
      label( for="package_type_id") Package:
      select#package_type_id.form-control(type='select' placeholder='Select package type' name='package_type_id' required='true')
        for package_type in package_types
          option(value=package_type.id selected= data.package_type_id == package_type.id) #{package_type.name}
    div.form-group
      label( for="component_sub_type_id") Fuse Type:
      select#component_sub_type_id.form-control(type='select' placeholder='Select Component type' name='component_sub_type_id' required='true')
        for component_sub_type in component_sub_types
          option(value=component_sub_type.id selected= data.component_sub_type_id == component_sub_type.id) #{component_sub_type.name}
    div.form-group
      label( for="rating") Rating:
      div.input-group
        input#rating.form-control(type="text" placeholder="Ex) 220, 1000" name="rating" value=data.rating)
        select#rating_unit_id.form-control(type='select' placeholder='Select units' name='rating_unit_id' required='true')
            for unit in rating_units
                option(value=unit.id selected= data.rating_unit_id == unit.id) !{unit.name} - #{unit.description}
    div.form-group
      label( for="voltage") Voltage:
      div.input-group
        input#voltage.form-control(type="text" placeholder="Ex) 220, 1000" name="voltage" value=data.voltage)
        select#voltage_unit_id.form-control(type='select' placeholder='Select units' name='voltage_unit_id' required='true')
            for unit in voltage_units
                option(value=unit.id selected= data.voltage_unit_id == unit.id) !{unit.name} - #{unit.description}
    div.form-group
      label( for="pin_count") Pin Count:
      input#pin_count.form-control(type="text" placeholder="Ex) 14,18, 20" name="pin_count" value=data.pin_count)
    div.form-group
      label( for="datasheet") Datasheet:
      input#datasheet.form-control(type="text" placeholder="URL to datasheet" name="datasheet" value=data.datasheet)
    br
    h4 Pins 
    - var n = 0
    - while (n < data.pin_count)
      div.row 
        div.col 
          input.form-control(type="text" id="pin_"+n name="pin_"+n value=(n+1))
        div.col 
          input.form-control(type="text" id="sym_"+n name="sym_"+n placeholder="Symbol" value=data.sym[n])
        div.col 
          input.form-control(type="text" id="descr_"+n name="descr_"+n placeholder="Description" value=data.descr[n])

      - n++

    button.btn.btn-default.btn-primary(type="submit") Submit

block scripts
  script(type="text/javascript").
    $( document ).ready(function() {
      $("#cmf").addClass("active");
    });
