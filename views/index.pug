extends layout

block content
  p This is my hardware development lab management system

  div.row 
    div.col-sm-3
      div.card.text-center.border-dark.mb-3(style="max-width: 18rem;")
        h5.card-header.border-dark Definitions
        div.card-body
          p.card-title Component Definitions: #{data.definitions}
          for count in counts
            p.card-text #{count.description}: #{count.ni}
          for alias in aliases
            p.card-text #{alias.description}: #{alias.ni}

    div.col-sm-3 
      div.card.text-center.border-dark.mb-3(style="max-width: 18rem;")
        h5.card-header.border-dark On Hand
        div.card-body
          p.card-title Components On Hand: #{data.on_hand}
          for item in inventory
            p.card-text #{item.quantity} from #{item.ni} #{item.description}

    div.col-sm-3 
      div.card.text-center.border-dark.mb-3(style="max-width: 18rem;")
        h5.card-header.border-dark Date Range
        div.card-body
          p.card-title Component Dates
          p.card-text Oldest: #{data.min_date}
          p.card-text Newest: #{data.max_date}
  
    div.col-sm-3 
      div.card.text-center.border-dark.mb-3(style="max-width: 18rem;")
        h5.card-header.border-dark Manufacturers
        div.card-body
          p.card-title Manufacturer Counts
          p.card-text Manufacturers: #{data.mfgs}
          p.card-text Codes: #{data.codes}

    div.col-sm-3 
      div.card.text-center.border-dark.mb-3(style="max-width: 18rem;")
        h5.card-header.border-dark Locations
        div.card-body
          p.card-title Location Counts
          p.card-text Main Locations: #{data.main_locations}
          p.card-text Child Locations: #{data.child_locations}
